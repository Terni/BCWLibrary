            xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
            prism:ViewModelLocator.AutowireViewModel="True"
            x:Class="BitcoinWallet.Views.VHelp"
            xmlns:controls="clr-namespace:XLabs.Forms.Controls;assembly=Expanded.Common"
            Title="{Binding title}"
            BackgroundColor="White"
            BarTextColor="Black"
  >

  <TabbedPage.Children>
    <ContentPage Title="Help Application" x:Name="HelpPage">
      <StackLayout Spacing="20" Padding="20" VerticalOptions="Center">
          <Label Text="Help text ..." VerticalOptions="Center" HorizontalOptions="Center" TextColor="Black" />
      </StackLayout>
    </ContentPage>
